<script>
    $('#datepicker').datepicker({
        uiLibrary: 'bootstrap4'
    });
  var options = {
  	now: "00:00",
    twentyFour: true,
  }
  $('#timepicker1').wickedpicker(options);
  $('#timepicker2').wickedpicker(options);
  $('#timepicker5').wickedpicker(options);

  $('#timepicker01').wickedpicker(options);
  $('#timepicker02').wickedpicker(options);



$(document).ready(function(){


	$('#sel1').change(function(){
		var value = $(this).val();
		var SelcValue = '';
		if(value == 'Richardson'){
	      	SelcValue = 'McKay';
	    }else{
	      	SelcValue = 'Richardson';
	    }
	    $('#SelcValue').val(SelcValue);

	});


    $('input[name="dygttocfb"]').click(function(){
      var value = $(this).val();
      var SelcValue = $('#sel1').val();
      if(SelcValue == 'Richardson'){
      	SelcValue = 'McKay';
      }else{
      	SelcValue = 'Richardson';
      }
      $('#SelcValue').val(SelcValue);
      if(value == 1){

        $("#hide-show-1").show();
        $("#flightNumber1").attr('required',true);
        $("#timepicker01").attr('required',true);
        $("#timepicker02").attr('required',true);

      }else{

        $("#hide-show-1").hide();
        $("#flightNumber1").attr('required',false);
        $("#timepicker01").attr('required',false);
        $("#timepicker02").attr('required',false);


        $("#flightNumber1").val('');
        $("#timepicker01").val('');
        $("#timepicker02").val('');


      }
    });


    $('input[name="wtaidfcta"]').click(function(){
      var value = $(this).val();
      if(value == 1){
        $(".issuetextarea").show();
        $("#raie").attr('required',true);
      }else{
        $(".issuetextarea").hide();
        $("#raie").attr('required',false);
        $("#raie").val('');
      }
    });
});

</script>

